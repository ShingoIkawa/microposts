<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
      <%= render 'follow_form' if logged_in? %>
    <% if @user.following_users.any? %>
      <h4>followings (<%= @user.following_users.count %>)</h4>
      <ol class="microposts">
        <% @follower.each do |follower| %>
          <li><%= follower.name %></li>
        <% end %>
      </ol>
    <% else %>
       <ol class="microposts">
         <li>No followings...</li>
       </ol>
    <% end %>
  </div>
</div>