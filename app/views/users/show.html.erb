<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% if @user == current_user %>
       <span><%= link_to "Uptade profile", edit_user_path(current_user) %></span>
       <span><%= link_to "Followings", followings_user_path(current_user) %></span>
       <span><%= link_to "Followers", followers_user_path(current_user) %></span>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <% @microposts.each do |micropost| %>
         <%= render partial: 'microposts/micropost', locals: { micropost: micropost } %>  
        <% end %>
      </ol>
    <% end %>
  </div>
</div>